<Dialog @ref="InfoDialog" Title="Whoops!" ShowOkayButton="true">
    <p>We couldn't find you! Please try again.</p>
</Dialog>
<EditForm class="rsvp-form" Model="Request" OnValidSubmit="@OnSubmitAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <label for="fullName">Full Name</label>
    <InputText id="fullName" class="form-input text-input" @bind-Value="Request.FullName" placeholder="John Doe" />
    <input type="submit" class="form-input button-input submit-input" value="Submit" />
</EditForm>